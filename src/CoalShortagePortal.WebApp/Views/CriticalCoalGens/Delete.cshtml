
@model CoalShortagePortal.WebApp.Models.GenCriticalCoalCreateVM
@{
    ViewData["Title"] = "Delete Critical Coal Generator";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null)
{
    <h3>Are you sure you want to delete the coal shortage generator @Model.Name ( @Model.StartDate.ToString("dd-MMM-yyyy") - @Model.EndDate.ToString("dd-MMM-yyyy")) ?</h3>
    <div>
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}